{
  "name": "@jpfulton/node-license-auditor-cli",
  "version": "0.0.10",
  "description": "A CLI for listing and auditing node module dependencies.",
  "keywords": [],
  "main": "./dist",
  "repository": "git@github.com:jpfulton/node-license-auditor-cli.git",
  "author": "J. Patrick Fulton <jpatrick.fulton@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.6.3",
  "type": "module",
  "engines": {
    "node": ">=18.16.0"
  },
  "bin": "dist/index.js",
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@tsconfig/node18": "^18.2.1",
    "@types/bluebird": "^3.5.39",
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.14.198",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "lodash": "^4.17.21"
  },
  "scripts": {
    "build": "tsc",
    "build-debug": "tsc --project tsconfig.debug.json",
    "clean": "rm -rf dist",
    "copy-assets": "cp -R ./src/auditor/license-checker/templates/ ./dist/auditor/license-checker/templates/",
    "lint": "eslint . --fix",
    "execute": "yarn clean && yarn build && yarn copy-assets && node ./dist/index.js",
    "debug": "yarn clean && yarn build-debug && yarn copy-assets && node --inspect-brk ./dist/index.js",
    "test": "jest --env=node --colors --coverage test"
  }
